generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model student {
  id            Int      @id @default(autoincrement())
  studentName   String
  birthDate     DateTime
  fatherName    String
  motherName    String
  gradeId       Int
  admissionDate DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  grade         grade    @relation(fields: [gradeId], references: [id])

  @@index([gradeId])
}

model grade {
  id       Int       @id @default(autoincrement())
  code     String    
  section  String
  students student[]
  @@unique([code, section])
}

